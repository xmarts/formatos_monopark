<odoo>
    <template id="reporte_pedido_compra" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.basic_layout">
                <div class="header">
                <h1>Monopark</h1>
                </div>
                <div class="page">
                    <div class="oe_structure"/>

                    <h2 t-if="o.state == 'draft'">Solicitud de presupuesto  #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state in ['sent', 'to approve']">Orden de compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state in ['purchase', 'done']">Confirmación de orden de compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state == 'cancel'">Orden de compa cancelada #<span t-field="o.name"/></h2>

                    <h4 class="text-center">Datos del proveedor</h4>
                    <div id="informations" class="row mt32 mb32">
                        <div class="col-6 bm-2">
                            <strong>N. Comercial:</strong>
                            <span t-field="o.partner_id.x_studio_nombre_comercial" class="m-0"/>
                            <br/>
                            <strong>Razón social:</strong>
                            <span t-field="o.partner_id.name"/>
                            <br/>
                            <strong>Domicilio:</strong>
                            <span t-field="o.partner_id.street"/>
                            <br/>
                            <strong>Colonia:</strong>
                            <span t-field="o.partner_id.l10n_mx_edi_colony"/>
                            <br/>
                            <strong>C.P.:</strong>
                            <span t-field="o.partner_id.zip"/>
                            <br/>
                            <strong>Ciudad:</strong>
                            <span t-field="o.partner_id.city_id.name"/>
                            <br/>
                            <strong>Estado:</strong>
                            <span t-field="o.partner_id.state_id.name"/>
                            <br/>
                            <strong>Tipo de:</strong>
                            <span t-field="o.tipo_de"/>
                            <br/>
                        </div>
                        <div class="col-6 bm-2">
                            <table style="margin-left:10px;" class="table table-striped">
                                <tr>
                                   <th>Banco</th>
                                   <th>No. Cuenta</th>
                                   <th>Clabe</th>
                                </tr>
                                <t t-foreach="o.partner_id.bank_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.bank_id"/></td>
                                        <td><span t-field="line.acc_number"/></td>
                                        <td><span t-field="line.clabe_campo"/></td>
                                    </tr>
                                </t>
                            </table>
                            <br/>
                            <strong>RFC:</strong>
                            <span t-field="o.partner_id.vat"/>
                            <br/>
                            <strong>Telefono:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <br/>
                            <strong>Contacto:</strong>
                            <span t-field="o.partner_id.phone"/>
                            <br/>
                            <strong>E-mail:</strong>
                            <span t-field="o.partner_id.email"/>
                        </div>
                    </div>

                    <div id="informations" class="row mt32 mb32">
                        <div class="col-6 bm-2">
                            <strong>Cedis:</strong>
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <br/>
                            <strong>Requisitor:</strong>
                            <span t-field="o.empleado.department_id.name"/>
                            <br/>
                            <strong>Transporte:</strong>
                            <span t-field="o.transporte"/>
                            <br/>
                            <strong>En atención:</strong>
                            <span t-field="o.empleado.name"/>
                        </div>
                        <div class="col-6 bm-2">
                            <strong>Tiempo entrega:</strong>
                            <span t-field="o.date_planned"/>
                            <br/>
                            <strong>Condiciones de pago:</strong>
                            <span t-field="o.payment_term_id.name"/>
                            <br/>
                            <strong>Elaboró:</strong>
                            <span t-field="o.user_id.name"/>
                            <br/>
                            <strong>Número de pedido:</strong>
                            <span t-field="o.num_pedido"/>
                        </div>
                    </div>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th><strong>Descripción</strong></th>
                                <th><strong>Impuestos</strong></th>
                                <th class="text-center"><strong>Fecha Req.</strong></th>
                                <th class="text-right"><strong>Cantidad</strong></th>
                                <th class="text-right"><strong>Precio Unitario</strong></th>
                                <th class="text-right"><strong>Monto</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td>
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div id="total" class="row justify-content-end">
                        <div class="col-4">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Impuestos</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                    
                </div>
            </t>        
        </xpath>
    </template>        
</odoo>
