                    <div id="informations" class="row mt32 mb32">
                        <div class="col-6 bm-2">
                            <table style="border: 1px solid;width:350px;">
                                <tr style="border-bottom:1px solid;">
                                    <th style="background-color:#EAEAEA;height:22px;padding:10px;width:200px;">No. De factura</th>
                                    <td><span t-field="o.prueba"/></td>
                                </tr>
                                <tr>
                                    <th style="background-color:#EAEAEA;height:22px;padding:10px;width:200px;">Fecha limite de pago</th>
                                    <td><span t-field="o.fecha_limite_pago"/></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-6 bm-2 justify-content-end">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Impuestos</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <table class="table">
                        <tr>
                            <td style="border-top: 0px solid white;text-align:center;"><img t-attf-src="data:image/*;base64,{{o.client}}" style="text-align:center;max-height:80px;max-width:120px;"/></td>
                            
                            <td style="border-top: 0px solid white;text-align:center;"><img t-attf-src="data:image/*;base64,{{o.consul}}" style="text-align:center;max-height:100px;max-width:150px;"/></td>
                        </tr>
                        <tr>
                            <td style="border-top: 0px solid white; text-align:center; ">Cliente</td>
                            <td style="border-top: 0px solid white; text-align:center;">Consultor</td> 
                        </tr>    
                    </table>
