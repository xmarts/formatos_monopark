<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pdf_purchase" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//[@name='page']" position="replace">
            <div class="page">
                    <div class="oe_structure"/>

                    <h2 t-if="o.state == 'draft'">Solicitud de presupuesto  #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state in ['sent', 'to approve']">Orden de compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state in ['purchase', 'done']">Confirmación de orden de compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state == 'cancel'">Orden de compa cancelada #<span t-field="o.name"/></h2>

                    <div id="informations" class="row mt32 mb32">
                        <div t-if="o.name" class="col-3 bm-2">
                            <strong>Nuestra ref. pedido:</strong>
                            <p t-field="o.name" class="m-0"/>
                        </div>
                        <div t-if="o.partner_ref" class="col-3 bm-2">
                            <strong>Su orden de referencia:</strong>
                            <p t-field="o.partner_ref" class="m-0"/>
                        </div>
                        <div t-if="o.date_order" class="col-3 bm-2">
                            <strong>Fecha de orden:</strong>
                            <p t-field="o.date_order" class="m-0"/>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8" style="width:60%;">
                            <table style="margin-left:10px;" class="table table-striped">
                                <tr>
                                   <th>Banco</th>
                                   <th>No. Cuenta</th>
                                   <th>Clabe</th>
                                </tr>
                                <t t-foreach="o.partner_id.bank_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.bank_id"/></td>
                                        <td><span t-field="line.acc_number"/></td>
                                        <td><span t-field="line.clabe_campo"/></td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div class="col-md-4" style="width:40%;">
                            <div t-if="o.cedis">
                                <strong>Cedis:</strong>
                                <span t-field="o.cedis"/>
                            </div>
                            <div t-if="o.transporte">
                                <strong>Transporte:</strong>
                                <span t-field="o.transporte"/>
                            </div>
                            <div t-if="o.enatencion">
                                <strong>En atención:</strong>
                                <span t-field="o.enatencion"/>
                            </div>
                        </div>
                    </div>
                    <br/>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th><strong>Descripción</strong></th>
                                <th><strong>Impuestos</strong></th>
                                <th class="text-center"><strong>Fecha Req.</strong></th>
                                <th class="text-right"><strong>Cantidad</strong></th>
                                <th class="text-right"><strong>Precio Unitario</strong></th>
                                <th class="text-right"><strong>Monto</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td>
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div id="total" class="row justify-content-end">
                        <div class="col-4">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Impuestos</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
            </div>
        </xpath>
    </template>
</odoo>    